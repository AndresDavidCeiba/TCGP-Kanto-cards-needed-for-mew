<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Imágenes con Checkboxes</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        .container {
            display: flex;
            flex-wrap: wrap;
            gap: 16px;
            padding: 16px;
        }
        .image-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 150px;
        }
        .image-card img {
            width: 100%;
            height: auto;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }
        .filter-bar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: #f4f4f4;
            padding: 10px 16px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="filter-bar">
        <label>
            <input type="checkbox" id="filter-unchecked"> Mostrar solo imágenes no marcadas
        </label>
    </div>
    <div class="container" id="imageContainer">
        <!-- Las imágenes serán añadidas aquí dinámicamente -->
    </div>

    <script>
        const totalImages = 150; // Número total de imágenes
        const container = document.getElementById('imageContainer');
        const filterCheckbox = document.getElementById('filter-unchecked');

        // Crear dinámicamente las imágenes y sus checkboxes
        for (let i = 1; i <= totalImages; i++) {
            const card = document.createElement('div');
            card.className = 'image-card';

            const img = document.createElement('img');
            img.src = `https://via.placeholder.com/150?text=Image+${i}`;
            img.alt = `Imagen ${i}`;

            const checkbox = document.createElement('input');
            checkbox.type = 'checkbox';
            checkbox.className = 'image-checkbox';

            card.appendChild(img);
            card.appendChild(checkbox);
            container.appendChild(card);
        }

        // Filtrar imágenes según el estado del checkbox principal
        filterCheckbox.addEventListener('change', () => {
            const checkboxes = document.querySelectorAll('.image-checkbox');
            checkboxes.forEach((checkbox, index) => {
                const card = checkbox.parentElement;
                if (filterCheckbox.checked) {
                    // Mostrar solo imágenes no marcadas
                    card.style.display = checkbox.checked ? 'none' : 'flex';
                } else {
                    // Mostrar todas las imágenes
                    card.style.display = 'flex';
                }
            });
        });
    </script>
</body>
</html>
